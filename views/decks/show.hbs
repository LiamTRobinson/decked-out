<main>
	<div id="header-wrap" class="row valign-wrapper">
		<div class="col s4 m5 l5 pull-s1">
			<h1><a href="/users/{{user.id}}" class="black-text"><i class="material-icons hide-on-small-only">settings</i>{{user.userName}}</a></h1>
		</div>
		<div class="col s4 pull-s1 push-m1 push-l1">
			<form action="/sessions?_method=DELETE" method="POST">
				<input type="submit" value="Log Out" class="btn grey darken-3">
			</form>
		</div>
	</div>
	<div class="row valign-wrapper black">
		<div class="col s12">
			<h2 class="white-text">{{deck.name}}</h2>
		</div>
	</div>
	<div class="row">
		<a href="/{{user.id}}/decks/{{deck.id}}/edit" class="col s5 center btn">Edit Deck</a>
		<a href="#sample-hand-modal" id="sample-hand-trigger" class="col s5 offset-s2 center btn" data-store={{array}}>Sample Hand</a>
	</div>
	<div class="row">
		<h5 class="col s12 center black-text">Total Cards: {{array.length}}</h5>
	</div>
	<div class="row" id="decks-row">
		{{#each deck.mainDeck}}
			<div class="col l5 m5 s8 offset-l1 offset-m1 offset-s3 mtg-card-container" style="background: url({{this.imageUrl}}); background-size: cover; background-size: contain; height: 300px; background-repeat: no-repeat; margin-top: 5%;">
				<br>
				<br>
				<br>
				<div class="grey darken-3 white-text col s5 center quantity">Quantity: {{this.quantity}}</div>
			</div>
		{{/each}}
	</div>		
</main>


<div id="sample-hand-modal" class="modal center">
	<div class="modal-content">
		<div class="carousel">
    <a class="carousel-item" href="#one!">1<img id="sh-card-0"></a>
    <a class="carousel-item" href="#two!">2<img id="sh-card-1"></a>
    <a class="carousel-item" href="#three!">3<img id="sh-card-2"></a>
    <a class="carousel-item" href="#four!">4<img id="sh-card-3"></a>
    <a class="carousel-item" href="#five!">5<img id="sh-card-4"></a>
    <a class="carousel-item" href="#six!">6<img id="sh-card-5"></a>
    <a class="carousel-item" href="#seven!">7<img id="sh-card-6"></a>
  </div>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-action modal-close btn">Close</a>
	</div>
</div>

