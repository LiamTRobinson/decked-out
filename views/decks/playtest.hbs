<!--*********************** MODALS **************************-->

<!-- TOKEN MODAL -->
<div id="pt-token-modal" class="modal">
	<div class="modal-content row">
		<form class="col 12">
			<div class="input-field">
				<label for="name">Name:</label>
				<input type="text" id="name" data-length="5">
			</div>
			<div class="input-field">
				<label for="power">Power:</label>
				<input type="number" id="power" min="0" max="99">
			</div>
			<div class="input-field">
				<label for="toughness">Toughness:</label>
				<input type="number" id="toughness" min="0" max="99">
			</div>
			<div>
				<input id="token-submit" type="submit" value="Create" class="btn">
			</div>
		</form>
	</div>	
</div>

<!-- HAND MODAL -->
<div id="pt-hand-modal" class="modal bottom-sheet">
	<div class="modal-content row" id="hand">
				
	</div>	
</div>

<!-- SCRY MODAL -->
<div id="pt-scry-modal" class="modal">
	<div class="modal-content row" id="scry">
		
	</div>
</div>

<!-- LIBRARY MODAL -->
<div id="pt-library-modal" class="modal">
	<div class="modal-content row" id="library">
		
	</div>
</div>

