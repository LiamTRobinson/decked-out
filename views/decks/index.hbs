<main>
	<div id="header-wrap" class="row valign-wrapper">
		<div class="col s4">
			<h1><a href="/users/{{user.id}}" class="black-text"><i class="material-icons hide-on-small-only">settings</i>{{user.userName}}</a></h1>
		</div>
		<div class="col s4">
			<form action="/sessions?_method=DELETE" method="POST">
				<input type="submit" value="Log Out" class="btn grey darken-3">
			</form>
		</div>
	</div>
	<div class="row valign-wrapper black">
		<div class="col s4">
			<h2 class="white-text">Decks</h2>
		</div>
		<div class="col s4">
			<a href="/{{user.id}}/decks/new"><p class="btn">New</p></a>
		</div>
	</div>
	<div class="row" id="decks-row">
		{{#each user.decks}}
			<div class="col l5 m5 s8 offset-l1 offset-m1 offset-s3 deck-container">
				<a href="/{{../user.id}}/decks/{{this.id}}"><h4 class="white-text  hoverable">{{this.name}}</h4></a>
			</div>
		{{/each}}
	</div>

<ul>
	
</ul>





		
	
</main>